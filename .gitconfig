# This can be copied to ~/.gitconfig for some common git settings and aliases

[user]
    email = jontsai@users.noreply.github.com
    name = Jonathan Tsai

[gpg]
    format = ssh

[gpg "ssh"]
    # Verification uses allowedSignersFile with email Ã— key combinations
    allowedSignersFile = ~/.ssh/allowed_signers
    # Dynamically use first key from ssh-agent for signing
    defaultKeyCommand = ssh-add -L | head -n1

[commit]
    gpgsign = true

[alias]
    br = branch
    ci = commit
    co = checkout
    st = status
    # list files
    ls = ls-files
    # list deleted files
    lsd = ls-files --deleted
    # remove deleted files
    rmd = !git rm `git ls-files --deleted`
    master = checkout master
    gh-pages = checkout gh-pages
    dsf = "!f() { [ \"$GIT_PREFIX\" != \"\" ] && cd "$GIT_PREFIX"; git diff --color $@ | diff-so-fancy | less --tabs=4 -RFX; }; f"
    permission-reset = !git diff -p -R --no-ext-diff --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
    uncommit = reset --soft HEAD^
    # Show git log with signature status (G=good, B=bad, U=unknown, N=none)
    slog = log --pretty=format:\"%C(auto)%h %G? %C(blue)%an%C(reset) %s %C(dim)(%ar)%C(reset)\"
    # Show git log with full signature details
    logs = log --show-signature

[pager]
#    diff = diff-so-fancy | less --tabs=4 -RFX
#    show = diff-so-fancy | less --tabs=4 -RFX

[pull]
    rebase = true

[push]
    default = simple

[submodule]
    recurse = true

[blame]
    # Ignore formatting/refactoring commits in git blame view
    # https://docs.github.com/en/repositories/working-with-files/using-files/viewing-a-file#ignore-commits-in-the-blame-view
    ignoreRevsFile = .git-blame-ignore-revs

[color]
    ui = true
    branch = auto
    diff = auto
    status = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    context = white

[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[filter "lfs"]
    clean = git-lfs clean -- %f
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
